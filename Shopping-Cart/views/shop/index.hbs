<div class="row">
    <p>
        <form action="/" method="GET" class="form-inline text-center">
            <div class="form-group">
                <input type="text" name="search", placeholder="Search for item" class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
                <button class="btn btn-default" id="clean_btn"> Clean </button>
            </div>
        </form>
    </p>
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>
{{#each products}}
<div class="row">
  
  {{#each this}}
  
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description">{{this.description}}</p>
        <div class="clearfix">          
          <div class="price">{{this.price}}&#8362;</div>
          <a href="/addToCart/{{this._id}}" class="btn btn-default pull-right btn-success">Add to Shopping Cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}

