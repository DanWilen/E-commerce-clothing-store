<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <h1>Checkout</h1>
    <h4>Your Total: {{total}}&#8362</h4>
    <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
        {{errMsg}}
    </div>
    <form action="/checkout" method="post" id="checkout-form">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="name">Name</lable>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="address">Address</lable>
                    <input type="text" name="address" id="address" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="card-name">Card Holder Name</lable>
                    <input type="text" name="card-name" id="card-name" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="card-number">Credit Card Number</lable>
                    <input type="text" name="card-number" id="card-number" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <lable for="card-expiry-month">Expiration Month</lable>
                            <input type="text" name="card-expiry-month" id="card-expiry-month" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <lable for="card-expiry-year">Expiration Year</lable>
                            <input type="text" name="card-expiry-year" id="card-expiry-year" class="form-control" required>
                        </div>
                    </div>
                </div> 
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="card-cvc">CVC</lable>
                    <input type="text" name="card-cvc" id="card-cvc" class="form-control" required>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Buy Now</button>
    </form>
</div>


