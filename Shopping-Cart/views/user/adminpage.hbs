<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <h1>Admin Page</h1>
    <h4>Add Items</h4>
    <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
        {{errMsg}}
    </div>
    <form action="/addProduct" method="post" id="checkout-form">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="name">Image Url Path</lable>
                    <input type="text" name="imageUrlPath" id="imageUrlPath" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="address">Product Name</lable>
                    <input type="text" name="productName" id="productName" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="card-name">Description</lable>
                    <input type="text" name="description" id="description" class="form-control" required>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <lable for="card-number">Price</lable>
                    <input type="text" name="price" id="price" class="form-control" required>
                </div>
            </div>      
        </div>
        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</div>